<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.carshowroom.controller.dashboardController"
            prefHeight="600.0" prefWidth="900.0">

    <!-- ====== TOP BAR ====== -->
    <top>
        <HBox spacing="10" style="-fx-background-color: #2C3E50; -fx-padding: 15;">
            <Label text="ðŸš— Car Showroom Dashboard"
                   style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" />
            <Pane HBox.hgrow="ALWAYS" />
            <Button fx:id="logoutButton"
                    text="Logout"
                    onAction="#handleLogout"
                    style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <!-- ====== SIDEBAR ====== -->
    <left>
        <VBox spacing="10" style="-fx-background-color: #34495E; -fx-padding: 20;">
            <Button text="Dashboard" onAction="#showDashboard" style="-fx-background-color: #2ECC71; -fx-text-fill: white;"/>
            <Button text="Cars" onAction="#showCars" style="-fx-background-color: transparent; -fx-text-fill: white;"/>
            <Button text="Users" onAction="#showUsers" style="-fx-background-color: transparent; -fx-text-fill: white;"/>
            <Button text="Sales" onAction="#showSales" style="-fx-background-color: transparent; -fx-text-fill: white;"/>
        </VBox>
    </left>

    <!-- ====== MAIN CONTENT ====== -->
    <center>
        <StackPane fx:id="contentArea" style="-fx-padding: 20;">
            <Label fx:id="dashboardLabel"
                   text="Welcome to the Car Showroom Dashboard!"
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" />
        </StackPane>
    </center>

</BorderPane>
